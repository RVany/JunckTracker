<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ResetActivity"
    tools:showIn="@layout/activity_reset">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginTop="67dp"
            android:layout_gravity="center_horizontal"
            android:text="Current daily Budget:"
            android:id="@+id/current_budget_text"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bit_budget_amount"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="21dp"
            android:textSize="21sp"
            android:inputType="number"
            android:hint="Enter New Daily Budget"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_budget_button"
            android:layout_marginTop="21dp"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/button_padding"
            android:text="Update"
            android:onClick="EditBudget" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:padding="@dimen/button_padding"
            android:layout_marginTop="200dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="Reset All Data"
            android:onClick="ResetAppData"
            android:background="@color/Red1"
            android:id="@+id/reset_button"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>