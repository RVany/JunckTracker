<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_layout_ID"
            android:hint="@string/user_name_layout_hint"
            android:layout_margin="@dimen/body_margin"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/daily_budget_layout_ID"
            android:hint="@string/daily_budget_layout_hint"
            android:layout_marginHorizontal="@dimen/body_margin"
            android:inputType="number"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_budget_button"
            android:layout_marginTop="21dp"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:text="Submit"
            android:onClick="setBudget" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>